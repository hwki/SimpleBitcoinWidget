<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="11dp"
    android:paddingLeft="@dimen/widget_margin"
    android:paddingRight="@dimen/widget_margin"
    android:paddingTop="11dp" >

    <LinearLayout
        android:id="@+id/bitcoinParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_outer"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_inner"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/loading"
                android:textColor="#888"
                android:textIsSelectable="false"
                android:textSize="25sp"
                android:typeface="sans" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/bitcoinImage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_bitcoin" />

            <TextView
                android:visibility="gone"
                android:id="@+id/bitcoinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="#888"
                android:textIsSelectable="false"
                android:textSize="25sp"
                android:typeface="sans" />
            
            <TextView
                android:visibility="gone"
                android:id="@+id/bitcoinValueSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="#888"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>